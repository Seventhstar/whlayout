<% if @items.count >0 %>
<div class="panel panel-default">
<table class="table tableSorter table-striped table-hover">

  <thead>
    <tr>
      <th>Наименование</th>
      <th>Цена</th>
      <th>Гар.</th>
      <th>Сайт</th>
    </tr>
  </thead>


  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[1][:title] %></td>
        <td><%= item[1][:price] %></td>
        <td><%= item[1][:warranty] %></td>
        <td><%= link_to image_tag(item[1][:site]+".ico"),item[1][:link] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<% end %>