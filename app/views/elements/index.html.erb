<h3>Микросхемы и т.д.</h3>

<div class="panel panel-default">
<table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Наименование</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @elements.each do |element| %>
      <tr>
        <td><%= element.name %></td>
         <%= edit_delete(element) %>
      </tr>
    <% end %>
      <tr>
        <td colspan="2"><%= render "form" %></td>
      </tr>

  </tbody>

</table>

<br>

<% link_to 'Добавить элемент', new_element_path, class: "btn btn-success" %>

</div>
