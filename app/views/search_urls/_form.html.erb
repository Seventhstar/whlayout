<%= simple_form_for(@search_url) do |f| %>

  <div class="form-inputs">
    
    
    <%= f.select :search_site_id, content_tag(:option,'Сайт...',:value=>nil)+options_for_select(@sites.collect{ |u| [u.name, u.id] }, @search_url.search_site_id) %>
    <%= f.select :search_category_id, content_tag(:option,'Категория...',:value=>nil)+options_for_select(@categories.collect{ |u| [u.name, u.id] }, @search_url.search_category_id) %>
    <%= f.text_area :url, :class => 'w80 margin_top_20'  %>
    <span class="copy">Copy</span>

  </div>
  <div class="inp_btn checkbox active"><%= f.check_box :disabled %></div>Отключить</label>
</br>
  <div class="form-actions">
    <%= f.button :submit, "Записать", class: 'btn-success' %>
  </div>


<% end %>
